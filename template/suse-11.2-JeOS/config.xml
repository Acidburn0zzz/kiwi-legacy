<?xml version="1.0" encoding="utf-8"?>

<image schemaversion="4.4" name="LimeJeOS-openSUSE-11.2">
	<description type="system">
		<author>Marcus Sch√§fer</author>
		<contact>ms@novell.com</contact>
		<specification>
			openSUSE 11.2 JeOS, is a small text based image which
			allows editing of files as well as upgrading to a full
			distro by using zypper with the pre-defined repository 
		</specification>
	</description>
	<profiles>
		<profile name="xenFlavour" description="VMX with Xen kernel"/>
		<profile name="vmxFlavour" description="VMX with default kernel" import="true"/>
	</profiles>
	<preferences>
		<type image="iso" primary="true" boot="isoboot/suse-11.2" flags="clic" hybrid="true"/>
		<version>1.11.2</version>
		<packagemanager>zypper</packagemanager>
		<locale>en_US</locale>
		<keytable>us.map.gz</keytable>
		<timezone>Europe/Berlin</timezone>
		<rpm-excludedocs>true</rpm-excludedocs>
		<boot-theme>openSUSE</boot-theme>
	</preferences>
	<preferences profiles="xenFlavour">
		<type image="vmx" filesystem="ext3" boot="vmxboot/suse-11.2" bootprofile="xen" bootkernel="xenk">
			<xenconfig memory="512" domain="domU">
				<xendisk device="/dev/xvda"/>
				<xenbridge name=""/>
			</xenconfig>
		</type>
		<type image="oem" filesystem="ext3" boot="oemboot/suse-11.2" bootprofile="xen" bootkernel="xenk" format="iso">
			<oemconfig>
				<oem-home>false</oem-home>
				<oem-systemsize>2048</oem-systemsize>
			</oemconfig>
			<xenconfig domain="dom0"/>
		</type>
	</preferences>
	<preferences profiles="vmxFlavour">
		<type image="vmx" filesystem="ext3" boot="vmxboot/suse-11.2" format="vmdk">
			<vmwareconfig memory="512" guestOS="suse" HWversion="4">
				<vmwaredisk controller="scsi" id="0"/>
				<vmwarenic driver="e1000" interface="0" mode="bridged"/>
			</vmwareconfig>
		</type>
		<type image="oem" filesystem="ext3" boot="oemboot/suse-11.2" format="iso">
			<oemconfig>
				<oem-home>false</oem-home>
				<oem-systemsize>2048</oem-systemsize>
			</oemconfig>
			<vmwareconfig memory="512" guestOS="suse" HWversion="4">
				<vmwaredisk controller="scsi" id="0"/>
				<vmwarenic driver="e1000" interface="0" mode="bridged"/>
			</vmwareconfig>
		</type>
	</preferences>
	<users group="root">
		<user pwd="$1$wYJUgpM5$RXMMeASDc035eX.NbYWFl0" home="/root" name="root"/>
	</users>
	<repository type="yast2">
		<source path="opensuse://11.2/repo/oss"/>
	</repository>
	<packages type="image">
		<package name="bootsplash-branding-openSUSE" bootinclude="true" bootdelete="true"/>
		<package name="gfxboot-branding-openSUSE" bootinclude="true" bootdelete="true"/>
		<package name="ifplugd"/>
		<package name="vim"/>
		<package name="grub"/>
		<opensusePattern name="base"/>
		<opensuseProduct name="openSUSE"/>
	</packages>
	<packages type="image" profiles="xenFlavour">
		<package name="kernel-xen" replaces="kernel-default"/>
		<package name="xen-tools-domU" replaces=""/>
		<package name="xen" replaces=""/>
	</packages>
	<packages type="image" profiles="vmxFlavour">
		<package name="kernel-default" replaces="kernel-xen"/>
	</packages>
	<packages type="bootstrap">
		<package name="filesystem"/>
		<package name="glibc-locale"/>
		<package name="cracklib-dict-full"/>
		<package name="openssl-certs"/>
	</packages>
</image>
