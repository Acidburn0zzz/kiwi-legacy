#!/bin/bash
for file in $(find -type f | grep -v Makefile | grep -v .git); do
  mode=$(stat -c %a $file)
  expand -t 2 $file > $file.tmp && mv $file.tmp $file
  chmod $mode $file
done
rm modules/KIWISchema.rng
make modules/KIWISchema.rng

sed -i -e 's@\&#9;@\&#32;\&#32;\&#32;\&#32;@' xsl/pretty.xsl
sed -i -e 's@\&#9;@\&#32;\&#32;\&#32;\&#32;@' xsl/print.xsl
