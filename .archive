# make tarball from the current source tree
#-------------------------------------------
./.version > .revision
find -type d | grep .svn | xargs rm -rf
find -name "*.swp" | xargs rm -f
mv rpm/kiwi.changes doc/ChangeLog
rm -rf rpm/

cd ..
tar -cjf kiwi.tar.bz2 kiwi/
mv kiwi.tar.bz2 kiwi/
